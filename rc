[include]
path                    = ~/.gitcli/aliases
path                    = ~/.gitcli/user
path                    = ~/.gitcli/secrets     # only in private branch

[core]
excludesFile            = ~/.gitcli/ignores
pager                   = less -iRXES

[init]
templateDir             = ~/.gitcli/skel/

[interactive]
singleKey               = true

[push]
default                 = current
followTags              = true

[diff]
#tool                    = vimdiff
tool                    = dirdiff       # only testing for now
prompt                  = false
submodule               = log

[difftool "dirdiff"]
cmd                     = vim -f +next '+execute \"DirDiff\" argv(0) argv(1)' \
                          $LOCAL $REMOTE

[merge]
tool                    = vimdiff
prompt                  = false
renormalize             = true          # for git-crypt
defaultToUpstream       = true

[branch]
autoSetupMerge          = always

[advice]
detachedHead            = false

[rerere]
enabled                 = true

[status]
relativePaths           = true
short                   = true
submoduleSummary        = true
