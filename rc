[include]
path            = ~/.gitcli/aliases
path            = ~/.gitcli/user
path            = ~/.gitcli/secrets

[core]
excludesfile    = ~/.gitcli/ignores
pager           = less -iRXES

[init]
templatedir     = ~/.gitcli/skel/

[interactive]
singlekey       = true

[push]
default         = simple
followtags      = true

[diff]
tool            = vimdiff
prompt          = false

[merge]
tool            = vimdiff
conflictstyle   = merge
#conflictstyle  = diff3
prompt          = false
renormalize     = true		# for git-crypt
