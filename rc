[include] # ignored in git versions before v1.7.9-10-g9b25a0b52e
path                    = ~/.gitcli/aliases
path                    = ~/.gitcli/user
path                    = ~/.gitcli/secrets     # only in private branch

[core]
excludesFile            = ~/.gitcli/ignores
pager                   = less -iRXES

[commit]
verbose                 = true

[init]
templateDir             = ~/.gitcli/skel/

[interactive]
singleKey               = true

[pull]
ff                      = only

[push]
default                 = current
followTags              = true

[diff]
#tool                    = vimdiff
tool                    = dirdiff       # only testing for now
prompt                  = false
submodule               = log
rename                  = copies

[difftool "dirdiff"]
cmd                     = vim -f +next '+execute \"DirDiff\" argv(0) argv(1)' \
                          $LOCAL $REMOTE

[merge]
tool                    = vimdiff
prompt                  = false
renormalize             = true          # for git-crypt
defaultToUpstream       = true

[branch]
autoSetupMerge          = always

[advice]
detachedHead            = false

[rerere]
enabled                 = true

[status]
relativePaths           = true
short                   = true
submoduleSummary        = true

[stash]
showPatch               = true
showStat                = true

[log]
decorate                = false
follow                  = true
