#
# scott@smemsh.net
# http://smemsh.net/src/.gitcli/

[alias]

#
stat            = status
st              = status
pick            = cherry-pick
br              = branch
sh              = show

#
ci              = commit --quiet --verbose
cim             = commit --quiet --verbose --message
cia             = commit --quiet --verbose --all
ciam            = commit --quiet --verbose --all --message
amend           = commit --amend
co              = checkout --quiet
clone           = clone --no-hardlinks
addp            = add --patch
ff              = merge --ff-only
fpush           = !git push --force origin +`git rev-parse --abbrev-ref @`
ds              = describe --abbrev=999 --long
head            = show --no-patch --format=%H

#
last            = log -1 HEAD
lastt           = log --color --oneline -10
lastfew         = log --color --oneline -3
lg              = log --oneline

#
unstage         = reset --quiet HEAD --
discard         = reset --quiet --hard

#
fetchr          = fetch --recurse-submodules
pullr           = pull --recurse-submodules
lsr             = remote --verbose
url             = ls-remote --get-url

#
inlog           = log ..@{u}
outlog          = log @{u}..
indiff          = diff ..@{u}
outdiff         = diff @{u}..
instat          = diff --stat ..@{u}
outstat         = diff --stat @{u}..
staged          = diff --staged
