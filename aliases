#
# scott@smemsh.net
# http://smemsh.net/src/.gitcli/

[alias]

#
ci              = commit
co              = checkout
pick            = cherry-pick

#
stat            = status --short
last            = log -1 HEAD
fulldesc        = describe --abbrev=999 --long

#
unstage         = reset -q HEAD --
discard         = reset -q --hard

#
fetchr          = fetch --recurse-submodules
pullr           = pull --recurse-submodules
lsr             = remote -v

#
inlog           = log ..@{u}
outlog          = log @{u}..
indiff          = diff ..@{u}
outdiff         = diff @{u}..
instat          = diff --stat ..@{u}
outstat         = diff --stat @{u}..
