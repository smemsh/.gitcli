#
# scott@smemsh.net
# http://smemsh.net/src/.gitcli/

[alias]

#
stat            = status
dsc             = describe
ci              = commit -q
co              = checkout -q
pick            = cherry-pick
clone           = clone --no-hardlinks

#
last            = log -1 HEAD
lastt           = log --color --oneline -10
lastfew         = log --color --oneline -3
fulldesc        = describe --abbrev=999 --long

#
unstage         = reset -q HEAD --
discard         = reset -q --hard

#
fetchr          = fetch --recurse-submodules
pullr           = pull --recurse-submodules
lsr             = remote -v

#
inlog           = log ..@{u}
outlog          = log @{u}..
indiff          = diff ..@{u}
outdiff         = diff @{u}..
instat          = diff --stat ..@{u}
outstat         = diff --stat @{u}..
