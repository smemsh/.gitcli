#
# scott@smemsh.net
# http://smemsh.net/src/.gitcli/

[alias]

#
stat            = status --short
ci              = commit
co              = checkout
pick            = cherry-pick

#
unstage         = reset HEAD --
last            = log -1 HEAD
fetchr          = fetch --recurse-submodules
pullr           = pull --recurse-submodules
lsr             = remote -v
discard         = reset --hard

#
inlog           = log ..@{u}
outlog          = log @{u}..
indiff          = diff ..@{u}
outdiff         = diff @{u}..
instat          = diff --stat ..@{u}
outstat         = diff --stat @{u}..
