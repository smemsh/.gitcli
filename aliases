#
# scott@smemsh.net
# http://smemsh.net/src/.gitcli/

[alias]

#
stat            = status
ds              = describe
pick            = cherry-pick

#
ci              = commit --quiet
cim             = commit --quiet --message
ciam            = commit --quiet --all --message
co              = checkout --quiet
clone           = clone --no-hardlinks
addp            = add --patch

#
last            = log -1 HEAD
lastt           = log --color --oneline -10
lastfew         = log --color --oneline -3
fulldesc        = describe --abbrev=999 --long

#
unstage         = reset --quiet HEAD --
discard         = reset --quiet --hard

#
fetchr          = fetch --recurse-submodules
pullr           = pull --recurse-submodules
lsr             = remote --verbose

#
inlog           = log ..@{u}
outlog          = log @{u}..
indiff          = diff ..@{u}
outdiff         = diff @{u}..
instat          = diff --stat ..@{u}
outstat         = diff --stat @{u}..
staged          = diff --staged
